<p id="notice"><%= notice %></p>

<div>
  <% if user_signed_in? %>
    <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
  <% else %>
    <li><%= link_to 'Log in', new_user_session_path %></li>
  <% end %>
</div>

<div>
  <%= link_to 'Go to messages', root_path %>
</div>

<h1>Admin area</h1>
<h1>Messages</h1>

<div>
    <hr />
    <a href="<%= messages_path %>">All Messages</a> |
    <strong><a class="btn btn-primary" href="<%= new_message_path %>" role="button">Add a Message</a></strong>
</div>

<% @messages.each do |message| %>
  <div class="card-body">
    <hr />
    <p class="card-text <%= message.hidden ? 'text-hidden' : '' %>"><%= message.entry %></p>
    <p class="card-text">
        <small class="text-muted">
            <span class="text-muted">Added <%= message.created_at.to_s(:short) %> by <%= message.name %></span>
        </small>
        <span><%= button_to message.hidden ? 'display' : 'hide', message, method: :patch %></span>
    </p>
  </div>
<% end %>